{
  "name": "cash-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "ajv": "^8.12.0"
  },
  "scripts": {
    "dev:next": "npm run dev --workspace=apps/next",
    "dev:mobile": "npm run dev --workspace=apps/mobile",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build:next": "npm run build --workspace=apps/next",
    "build:mobile": "npm run build --workspace=apps/mobile",
    "build:backend": "npm run build --workspace=apps/backend",
    "start:backend": "npm run start --workspace=apps/backend",
    "storybook": "npm run storybook --workspace=apps/storybook",
    "build-storybook": "npm run build-storybook --workspace=apps/storybook",
    "upgrade-storybook": "npm run upgrade-storybook --workspace=apps/storybook",
    "lint": "eslint .",
    "lint:backend": "npm run lint --workspace=apps/backend",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "./scripts/clean.sh root",
    "clean:mobile": "./scripts/clean.sh mobile",
    "clean:mobile:quick": "./scripts/clean.sh mobile --quick",
    "clean:mobile:ios": "./scripts/clean.sh mobile --ios",
    "clean:next": "./scripts/clean.sh next",
    "clean:backend": "./scripts/clean.sh backend",
    "clean:all": "./scripts/clean.sh all",
    "clean:deps": "./scripts/clean.sh root --deps"
  },
  "dependencies": {
    "react": "18.3.1",
    "vite": "^7.1.10"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/react": "~18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
